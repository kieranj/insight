.section
  %table{ :border => 0, :width => 500, :cellpadding => 0, :cellspacing => 0 }
    %tr
      %td{ :valign => :top }
        .label.req.top Subject:
        = f.text_field :subject, :style => "width:500px"

  %table{ :border => 0, :width => 500, :cellpadding => 0, :cellspacing => 0 }
    %tr
      %td{ :valign => :top }
        .label.req Assigned to:
        = collection_select :issue, :assigned_to, @users, :id, :full_name, { :include_blank => "Myself" }
    %tr
      %td{ :valign => :top }
        .label Priority:
        = f.select :priority, Issue::Priorities, { :selected => @issue.priority ? @issue.priority : "Low" }, { :style => "width:324px" }
      %td= spacer
    %tr
      %td{ :valign => :top }
        .label State:
        = f.select :state, Issue::States, { :selected => @issue.state ? @issue.state : "Open" }, { :style => "width:324px" }
      %td= spacer
        
  %table{ :border => 0, :width => 500, :cellpadding => 0, :cellspacing => 0 }
    %tr
      %td{ :valign => :top }
        .label.req Issue:
        = f.text_area :body