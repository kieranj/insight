- remote_form_for([:admin, @product], :html => one_submit_only(:product).merge({:autocomplete => 'off'})) do |f|
  = link_to_close edit_admin_product_path(@product)
  = f.error_messages
  = render :partial => "admin/products/form", :locals => { :f => f }
  .buttonbar
    = f.submit "Save Product"
    #{t :or}
    = link_to_cancel edit_admin_product_path(@product)
