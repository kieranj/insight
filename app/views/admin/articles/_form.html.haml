- edit ||= false
.section
  %table(width=500 cellpadding=0 cellspacing=0)
    %tr
      %td(valign="top")
        .label.top.req Name
        = f.text_field :title, :style => "width: 240px"
    %tr
      %td(valign="top")
        .label.top.req Product
        = f.collection_select :product_id, Product.all, :id, :name, { :prompt => "Please select..." }, :style => "width: 240px"
    %tr
      %td(valign="top")
        .label.top.req Category
        = f.collection_select :category_id, ArticleCategory.all, :id, :name, { :prompt => "Please select..." }, :style => "width: 240px"
    %tr
      %td(valign="top")
        .label.top.req Content
        = f.text_area :body, :style => "width: 540px"