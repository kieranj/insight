- edit ||= false
.section
  %table(width=500 cellpadding=0 cellspacing=0)
    %tr
      %td(valign="top")
        .label.top.req Name
        = f.text_field :name, :style => "width: 240px"
    %tr
      %td(valign="top")
        .label.top.req Description
        = f.text_area :description, :style => "width: 540px; height: 50px"
    %tr
      %td(valign="top")
        .label.top.req Product
        = f.collection_select :product_id, Product.all, :id, :name, { :prompt => "Please select..." }, :style => "width: 240px"